{
  "name": "oauth-identityserver",
  "version": "0.1.2",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "copyHTML": "xcopy src\\*.html dist /s /e /y",
    "copyCSS": "xcopy src\\*.css dist /s /e /y",
    "copyAssets": "xcopy src\\assets\\* dist\\assets /s /e /y",
    "copy": "npm run copyHTML && npm run copyCSS && npm run copyAssets",
    "build": "tsc && npm run copy",
    "unix-copyHTML": "cp -rvu ./src/templates/*.html dist/templates/",
    "unix-copyAssets": "cp -rvu ./src/assets dist/assets",
    "unix-copy": "npm run unix-copyHTML && npm run unix-copyAssets",
    "unix-build": "tsc && npm run unix-copy",
    "start": "node ./dist/index.js",
    "buildStart": "npm run build && npm run start",
    "watch": "npm-watch buildStart"
  },
  "watch": {
    "buildStart": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js,html,css,json"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fwatermann/OAuth-IdentityServer.git"
  },
  "author": "Finn Watermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fwatermann/OAuth-IdentityServer/issues"
  },
  "homepage": "https://github.com/fwatermann/OAuth-IdentityServer#readme",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.17",
    "@types/uuid": "^8.3.4",
    "npm-watch": "^0.11.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@types/mysql": "^2.15.21",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "node-2fa": "^2.0.3",
    "sprightly": "^1.0.3",
    "uuid": "^9.0.0"
  }
}
